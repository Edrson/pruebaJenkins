pipeline {
  agent any
    
 
    
  stages {
        
    stage('Git') {
      steps {
        git 'https://github.com/Edrson/pruebaJenkins'
      }
    }
     
    stage('Build') {
      steps {
        bat 'npm install'
        
      }
    }  
    stage('clean Container') {
      steps {
        bat 'docker stop $(docker ps -a -q)'
        bat 'docker rm $(docker ps -a -q)'
      }
    }   
    stage('crearDockerImage') {
      steps {
        bat 'docker build -t prueba5 .'
      }
    }
   stage('correrDocker') {
      steps {
        bat 'docker run -d -p 3000:3000 prueba5'
      }
    }
  }
}
