pipeline {
  agent any
    
 
    
  stages {
        
    stage('Git') {
      steps {
        git 'https://github.com/Edrson/pruebaJenkins'
      }
    }
     

  environment {
    DOCKERHUB_CREDENTIALS = credentials('ederson87-dockerhub')
  }   
    stage('Build') {
      steps {
        bat 'npm install'
        
      }
    }  
    
    stage('crearDockerImage') {
      steps {
        bat 'docker build -t ederson87/repo2:v3 .'
      }
    }

    stage('Login') {
      steps {
        bat 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
      }
    }
    stage('Push') {
      steps {
        bat 'docker push ederson87/repo2:v3'
      }
    }
   stage('correrDocker') {
      steps {
        bat 'docker run -d -p 3000:3000 prueba5'
      }
    }
  post {
    always {
      bat 'docker logout'
    }
  }
  }
}
