pipeline {
  
environment {
  registry = "ederson87/repo2"
  registryCredential = 'ederson87-dockerhub'
  dockerImage = ''
}

agent any  
  stages {
        
    stage('Git') {
      steps {
        git 'https://github.com/Edrson/pruebaJenkins'
      }
    }
     
    stage('Build') {
      steps {
        bat 'npm install'
        
      }
    }  
   
    stage('crearDockerImage') {
      steps {
        bat 'docker build -t ederson87/repo2:v3 .'
      }
    }

    stage('Deploy our image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }

   stage('correrDocker') {
      steps {
        bat 'docker run -d -p 3000:3000 ederson87/repo2'
      }
    }
  }
}
